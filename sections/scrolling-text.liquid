{{ 'scrolling-text.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign st = section.settings
  assign bg_color = st.background_color
  assign s_text_color = st.s_text_color
  assign text_font_size = st.text_font_size
  assign text_font_weight = st.text_font_weight
  assign text_time = st.text_time
  assign text_spacing = st.text_spacing
  assign spacing_icon = st.spacing_icon

  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif
  assign spt_tablet = ''
  if st.padding_top > 50
    assign spt_tablet = ' spt-tablet'
  endif
  assign spt_mobile = ''
  if st.padding_top > 30
    assign spt_mobile = ' spt-mobile'
  endif
  assign spb_tablet = ''
  if st.padding_bottom > 50
    assign spb_tablet = ' spb-tablet'
  endif
  assign spb_mobile = ''
  if st.padding_bottom > 30
    assign spb_mobile = ' spb-mobile'
  endif
  assign has_bg = ''
  if bg_color
    assign has_bg = ' has-bg'
  endif
-%}

{%- capture style -%}
  {%- if bg_color != blank -%}
    --section-bg-color: {{ bg_color }};
  {%- endif -%}
  {%- if s_text_color != blank -%}
    --s-text-color: {{ s_text_color }};
  {%- endif -%}
  --text-font-size: {{ text_font_size }}px;
  --text-font-weight: {{ text_font_weight }};
  --text-time: {{ text_time }}s;
  --text-spacing: {{ text_spacing }}px;
  --section-padding-top: {{ st.padding_top }}px; --section-padding-bottom: {{ st.padding_bottom }}px;
{%- endcapture -%}

<section
  class="bls__section {{ has_bg }}{{ spt_tablet }}{{ spb_tablet }}{{ spt_mobile }}{{ spt_mobile }} bls__scrolling  {{ reset_spacing }}"
  style="{{ style | strip | strip_newlines }}"
>
  <div class="{{ st.container }} section-full">
    <div class="bls__page-scrolling-content d-flex align-items-center overflow-hidden">
      {%- for i in (0..5) -%}
        <div class=" d-flex align-items-center">
          {%- for block in section.blocks -%}
            <a
              aria-label="links"
              {% if block.settings.text_link != blank %}
                href="{{ block.settings.text_link }}"
              {% else %}
                role="link" aria-disabled="true"
              {% endif %}
            >
              {{ block.settings.content }}
              <span class="scroll-line">
                {% if spacing_icon == 'icon_line' %}
                  <svg width="31" height="1" viewBox="0 0 31 1" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect x="0.5" y="0.5" width="30" height="1"/>
                  </svg>
                {% elsif spacing_icon == 'icon_circle' %}
                  <svg width="11" height="10" viewBox="0 0 11 10" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="5.5" cy="5" r="4.5" fill="transparent"/>
                  </svg>
                {% endif %}
              </span>
            </a>
          {%- endfor -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Scrolling text",
  "settings": [
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Layout",
      "default": "container",
      "options": [
        {
          "value": "container",
          "label": "Default"
        },
        {
          "value": "container-fluid",
          "label": "Fluid container"
        },
        {
          "value": "full-width",
          "label": "Full width"
        }
      ]
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color"
    },
    {
      "type": "color",
      "id": "s_text_color",
      "label": "Color",
      "default": "#111111"
    },
    {
      "type": "range",
      "id": "text_font_size",
      "min": 10,
      "max": 30,
      "step": 1,
      "label": "Font size",
      "unit": "px",
      "default": 12
    },
    {
      "type": "range",
      "id": "text_font_weight",
      "min": 100,
      "max": 900,
      "step": 100,
      "label": "Font weight",
      "default": 500
    },
    {
      "type": "range",
      "id": "text_time",
      "min": 3,
      "max": 30,
      "step": 1,
      "label": "Time",
      "unit": "s",
      "default": 10
    },
    {
      "type": "range",
      "id": "text_spacing",
      "min": 10,
      "max": 100,
      "step": 1,
      "label": "Spacing",
      "unit": "px",
      "default": 50
    },
    {
      "type": "select",
      "id": "spacing_icon",
      "label": "Spacing icon",
      "default": "icon_line",
      "options": [
        {
          "value": "icon_line",
          "label": "Line"
        },
        {
          "value": "icon_circle",
          "label": "circle"
        }
      ]
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "reset_spacing",
      "label": "Remove default space between sections",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "scrolling_text",
      "name": "Content",
      "settings": [
        {
          "type": "richtext",
          "id": "content",
          "label": "Text",
          "default": "<p>FREE DELIVERY AND RETURNS FROM $120</p>"
        },
        {
          "type": "url",
          "id": "text_link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Scrolling text",
      "blocks": [
        { "type": "scrolling_text" },
        { "type": "scrolling_text" },
        { "type": "scrolling_text" },
        { "type": "scrolling_text" }
      ]
    }
  ]
}
{% endschema %}
