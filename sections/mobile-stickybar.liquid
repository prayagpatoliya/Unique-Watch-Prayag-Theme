{% schema %}
{
  "name": "Mobile stickybar",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_mobile_stickybar",
      "label": "Enable mobile stickybar",
      "default": true
    },
    {
      "type": "header",
      "content": "Addons"
    },
    {
      "type": "checkbox",
      "id": "show_home",
      "label": "Show Home icon",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_cart",
      "label": "Show cart icon",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_products_all",
      "label": "Show products all",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_wishlist",
      "label": "Show wishlist icon",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_my_account",
      "label": "Show my account icon",
      "default": true
    }
  ]
}
{% endschema %}
