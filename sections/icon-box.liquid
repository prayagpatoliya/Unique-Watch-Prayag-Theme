{%- liquid
  assign st = section.settings
  assign container = st.container
  assign text_align = st.text_alignment
  assign heading = st.heading
  assign description = st.description
  assign bg_color = st.background_color
  assign img_view = st.ib_img_view
  assign img_position = st.img_position
  assign custom_column = st.custom_column
  assign icon_width = st.icon_width
  assign content_text_alignment = st.content_text_alignment
  assign blocks = section.blocks
  assign text_color = st.text_color
  assign column_gap = st.column_gap

  assign column_gap_tablet = ''
  if column_gap > 30
    assign column_gap_tablet = ' gap-tablet'
  endif
  assign column_gap_mobile = ''
  if column_gap > 15
    assign column_gap_mobile = ' gap-mobile'
  endif

  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif

  assign responsive_column = ''
  if custom_column == 1
    assign responsive_column = 'col-12'
  elsif custom_column == 2 or custom_column == 4
    assign responsive_column = 'col-sm-6'
  elsif custom_column == 3
    assign responsive_column = 'col-sm-4'
  endif

  assign img_position = ''
  if st.img_position == 'position-right'
    assign img_position = ' flex-row-reverse'
  elsif st.img_position == 'position-top'
    assign img_position = ' flex-column align-items-center text-center'
  endif

  assign bls_content_position = ''
  if st.img_position == 'position-top'
    assign bls_content_position = ' mt-15'
  elsif st.img_position == 'position-right'
    assign bls_content_position = ' mr-15'
  elsif st.img_position == 'position-left'
    assign bls_content_position = ' ml-15'
  endif
  assign spt_tablet = ''
  if st.padding_top > 50
    assign spt_tablet = ' spt-tablet'
  endif
  assign spt_mobile = ''
  if st.padding_top > 30
    assign spt_mobile = ' spt-mobile'
  endif
  assign spb_tablet = ''
  if st.padding_bottom > 50
    assign spb_tablet = ' spb-tablet'
  endif
  assign spb_mobile = ''
  if st.padding_bottom > 30
    assign spb_mobile = ' spb-mobile'
  endif
  assign has_bg = ''
  if bg_color != blank
    assign has_bg = ' has-bg'
  endif
-%}

{%- capture style -%}
  {%- if bg_color != blank -%}
    --section-bg-color: {{ bg_color }};
  {%- endif -%}
  --section-padding-top: {{ st.padding_top }}px; --section-padding-bottom: {{ st.padding_bottom }}px; --bls-gutter-x:
  {{ column_gap }}px;
{%- endcapture -%}
<section
  class="bls__section {{ has_bg }}{{ spt_tablet }}{{ spb_tablet }}{{ spt_mobile }}{{ spt_mobile }} bls__shipping{{ reset_spacing }}"
  style="{{ style | strip | strip_newlines }}"
>
  <div class="{{ container }}">
    {%- if heading != blank or description != blank -%}
      <div class="bls__section-header {{ text_align }} {{ text_color }}">
        {%- if heading != blank -%}
          <h2 class="bls__section-heading mb-5">{{ heading }}</h2>
        {%- endif -%}
        {%- if description != blank -%}
          <div class="bls__section-des">
            {{ description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
    <div
      class="row row-cols-lg-{{ custom_column }}{{ column_gap_tablet }}{{ column_gap_mobile }}"
      style="--bs-gutter-x: {{ column_gap }}px;"
    >
      {%- for block in blocks -%}
        <div class="{{ responsive_column }}">
          <div class="bls__section_shipping-inner flex{{ img_position }} {{ content_text_alignment }} {{ img_view }} {% if img_view == 'border' %}p-15{%- endif -%}">
            <div
              class="bls__section_shipping-image bls_img-ratio pt-5"
              style="width: {{ icon_width }}px;"
            >
              {%- if block.settings.icon != blank -%}
                {%- render 'responsive-image', image: block.settings.icon -%}
              {%- else -%}
                {%- render 'responsive-image' -%}
              {%- endif -%}
            </div>
            <div class="bls__section_shipping-content flex-1 {{ content_text_alignment }} {{ text_color }} {{ bls_content_position }}">
              <h3 class="fs-24 fw-400 mb-10">
                {{ block.settings.heading }}
              </h3>
              <div>
                {{ block.settings.description }}
              </div>
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image box",
  "settings": [
    {
      "type": "header",
      "content": "Section header"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p></p>"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "default": "text-center",
      "options": [
        {
          "value": "text-left",
          "label": "Left"
        },
        {
          "value": "text-center",
          "label": "Center"
        },
        {
          "value": "text-right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Layout",
      "default": "container",
      "options": [
        {
          "value": "container",
          "label": "Default"
        },
        {
          "value": "container-fluid",
          "label": "Fluid container"
        },
        {
          "value": "full-width",
          "label": "Full width"
        }
      ]
    },
    {
      "type": "range",
      "id": "custom_column",
      "label": "Columns per row",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "min": 0,
      "max": 50,
      "unit": "px",
      "step": 5,
      "default": 30,
      "label": "Column gap",
      "id": "column_gap"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color"
    },
    {
      "type": "header",
      "content": "Image box"
    },
    {
      "type": "range",
      "id": "icon_width",
      "label": "Image width (px)",
      "min": 20,
      "max": 220,
      "step": 2,
      "unit": "px",
      "default": 42
    },
    {
      "type": "select",
      "id": "ib_img_view",
      "label": "View",
      "default": "default",
      "options": [
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "border",
          "label": "Framed"
        }
      ]
    },
    {
      "type": "select",
      "id": "img_position",
      "label": "Image position",
      "default": "position-top",
      "options": [
        {
          "value": "position-left",
          "label": "Left"
        },
        {
          "value": "position-top",
          "label": "Top"
        },
        {
          "value": "position-right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "select",
      "id": "content_text_alignment",
      "label": "Content text alignment",
      "default": "text-center",
      "options": [
        {
          "value": "text-left",
          "label": "Left"
        },
        {
          "value": "text-center",
          "label": "Center"
        },
        {
          "value": "text-right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "select",
      "id": "text_color",
      "label": "Text color",
      "default": "default",
      "options": [
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "text-white",
          "label": "Light"
        }
      ]
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "reset_spacing",
      "label": "Remove default space between sections",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "iconbox",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "This is heading text"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Tell about your service.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image box",
      "blocks": [
        {
          "type": "iconbox",
          "settings": {
            "heading": "Free shipping",
            "description": "<p>Get complimentary ground shipping on every order. Don't love it? Send it back, on us.</p>"
          }
        },
        {
          "type": "iconbox",
          "settings": {
            "heading": "Free Returns",
            "description": "<p>Free returns within 10 days, please make sure the items are in undamaged condition.</p>"
          }
        },
        {
          "type": "iconbox",
          "settings": {
            "heading": "Support Online",
            "description": "<p>We support customers 24/7, send questions we will solve for you immediately.</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}
