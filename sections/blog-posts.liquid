{{ 'blog-template.css' | asset_url | stylesheet_tag }}
{{ 'blog-item.css' | asset_url | stylesheet_tag }}
{% liquid
  assign st = section.settings
  assign title = st.heading
  assign desc = st.description
  assign text_align = st.text_align
  assign container = st.container
  assign bg_color = st.background_color
  assign num_post = st.num_post_show
  assign item_desktop = st.post_item_desktop
  assign item_tablet = st.post_item_tablet
  assign item_mobile = st.post_item_mobile
  assign column_gap = st.column_gap
  assign show_author = st.post_show_author
  assign show_category = st.post_show_category
  assign show_date = st.post_show_date
  assign show_excerpt = st.post_show_excerpt
  assign show_readmore = st.post_show_button
  assign custom_ratio = st.custom_ratio
  assign aspect_ratio = st.aspect_ratio
  assign show_arrow = st.show_arrow
  assign show_bullet = st.show_bullet
  assign autoplay = st.autoplay
  assign loop = st.loop
  assign hover_effect = st.hover_effect
  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif
  assign spt_tablet = ''
  if st.padding_top > 50
    assign spt_tablet = ' spt-tablet'
  endif
  assign spt_mobile = ''
  if st.padding_top > 30
    assign spt_mobile = ' spt-mobile'
  endif
  assign spb_tablet = ''
  if st.padding_bottom > 50
    assign spb_tablet = ' spb-tablet'
  endif
  assign spb_mobile = ''
  if st.padding_bottom > 30
    assign spb_mobile = ' spb-mobile'
  endif

  assign has_bg = ''
  if bg_color != blank
    assign has_bg = ' has-bg'
  endif
%}
{%- capture style -%}
  {%- if bg_color != blank -%}
    --section-bg-color: {{ bg_color }};
  {%- endif -%}
  --section-padding-top: {{ st.padding_top }}px; --section-padding-bottom: {{ st.padding_bottom }}px;--bls-gutter-x:
  {{ column_gap }}px;
{%- endcapture -%}
<section
  class="bls__section {{ spt_tablet }}{{ spb_tablet }}{{ spt_mobile }}{{ spt_mobile }} bls__blog-posts{{ reset_spacing }}{{ has_bg}}"
  id="{{ section.id }}"
  data-id="{{ section.id }}"
  data-type="bls_swiper"
  style="{{ style | strip | strip_newlines }}"
>
  <div class="{{ container }}">
    <div class="bls__blog-header ">
      {%- if title != blank or desc != blank -%}
        <div class="bls__section-header {{ text_align }}">
          {%- if title != blank -%}
            <h2 class="bls__section-heading mb-5">{{ title }}</h2>
          {%- endif -%}
          {%- if desc != blank -%}
            <div class="bls__section-des">
              {{ desc }}
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}
      <div class="bls__blog-posts-main">
        {%- assign blog = blogs[st.blog] -%}
        {%- if blog.articles.size > 0 -%}
          <div
            class="swiper bls__swiper hover__show-nav"
            id="bls__swiper-{{ section.id }}"
            data-section-id="{{ section.id }}"
            data-autoplay="{{ autoplay }}"
            data-loop="{{ loop }}"
            data-mobile="1"
            data-tablet="2"
            data-desktop="{{ item_desktop }}"
            data-spacing="{{ column_gap }}"
          >
            <div class="swiper-wrapper" style="--perload-gap: {{ column_gap }}px">
              {%- for article in blog.articles limit: num_post -%}
                <div class="swiper-slide">
                  {%- render 'article-card',
                    article: article,
                    show_category: show_category,
                    show_date: show_date,
                    show_excerpt: show_excerpt,
                    show_readmore: show_readmore,
                    show_author: show_author,
                    aspect_ratio: aspect_ratio,
                    custom_ratio: custom_ratio,
                    hover_effect: hover_effect
                  -%}
                </div>
              {%- endfor -%}
            </div>
            {% render 'swiper-control', show_bullet: show_bullet, show_arrow: show_arrow %}
          </div>
        {%- else -%}
          <div
            class="swiper bls__swiper hover__show-nav"
            id="bls__swiper-{{ section.id }}"
            data-section-id="{{ section.id }}"
            data-mobile="1"
            data-tablet="3"
            data-desktop="3"
            data-spacing="{{ column_gap }}"
          >
            <div class="swiper-wrapper" style="--perload-gap: {{ column_gap }}px">
              {% for i in (1..num_post) %}
                <div class="swiper-slide bls__blog-posts-item">
                  <div class="bls__blog-posts-image {{ hover_effect }}">
                    {% render 'responsive-image' %}
                  </div>
                  <div class="blos__blog-posts-info">
                    <div class="bls__blog-posts-category fs-12 fw-500 uppercase mb-5">
                      <a href="#">
                        <span>{{ 'blog_post.category' | t }}</span>
                      </a>
                    </div>
                    <h3 class="bls__blog-posts-title mb-5 fw-400 fs-24">
                      <a href="#">
                        {{ 'blog_post.title' | t }}
                      </a>
                    </h3>
                    <div class="bls__blog-posts-content mb-15">
                      <p>
                        {{ 'blog_post.short_content' | t }}
                      </p>
                    </div>
                    <div class="bls__blog-posts-bottom d-flex flex-wrap justify-content-between align-items-center mt-15">
                      <div class="bls__blog-posts-bottom d-flex flex-wrap align-items-center">
                        <div class="bls__blog-posts-date mt-5 mr-15 fw-500 fs-12 uppercase">
                          <span>
                            {{ 'blog_post.date' | t }}
                          </span>
                        </div>
                        <div class="bls__blog-posts-author mt-5 mr-15 fw-500 fs-12 uppercase">
                          <span>
                            {{- 'blog_post.post_by' | t }}
                            {{ 'blog_post.author' | t -}}
                          </span>
                        </div>
                      </div>
                      <a class="mt-5 fw-500 fs-12 uppercase blog-posts-readmore" href="/blogs/news/new-summer">
                        {{- 'blog_post.read_more' | t -}}
                      </a>
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Blog posts",
  "settings": [
    {
      "type": "header",
      "content": "Section header"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Blog posts"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text alignment",
      "default": "text-center",
      "options": [
        {
          "value": "text-left",
          "label": "Left"
        },
        {
          "value": "text-center",
          "label": "Center"
        },
        {
          "value": "text-right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "header",
      "content": "General"
    },
    {
      "type": "select",
      "id": "container",
      "label": "Layout",
      "default": "container",
      "options": [
        {
          "value": "container",
          "label": "Default"
        },
        {
          "value": "container-fluid",
          "label": "Fluid container"
        },
        {
          "value": "full-width",
          "label": "Full width"
        }
      ]
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color"
    },
    {
      "type": "header",
