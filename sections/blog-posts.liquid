    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Blog category"
    },
    {
      "type": "range",
      "min": 1,
      "max": 10,
      "default": 4,
      "step": 1,
      "id": "num_post_show",
      "label": "Posts to show"
    },
    {
      "type": "range",
      "min": 1,
      "max": 5,
      "step": 1,
      "id": "post_item_desktop",
      "default": 3,
      "label": "Post per row (Desktop)"
    },
    {
      "type": "range",
      "min": 0,
      "max": 50,
      "step": 5,
      "default": 30,
      "label": "Column gap",
      "id": "column_gap"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "loop",
      "label": "Loop",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_arrow",
      "label": "Show arrows",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_bullet",
      "label": "Show bullets",
      "default": false
    },
    {
      "type": "header",
      "content": "Posts settings"
    },
    {
      "type": "select",
      "id": "aspect_ratio",
      "label": "Aspect ratio",
      "default": "original",
      "options": [
        {
          "value": "original",
          "label": "Original aspect ratio"
        },
        {
          "value": "16/9",
          "label": "16:9"
        },
        {
          "value": "3/4",
          "label": "3:4"
        },
        {
          "value": "4/3",
          "label": "4:3"
        },
        {
          "value": "1/1",
          "label": "1:1"
        },
        {
          "value": "custom",
          "label": "Custom"
        }
      ]
    },
    {
      "type": "text",
      "id": "custom_ratio",
      "label": "Custom ratio",
      "default": "21:9"
    },
    {
      "type": "select",
      "id": "hover_effect",
      "label": "Hover effect",
      "default": "zoom",
      "options": [
        {
          "value": "zoom",
          "label": "Zoom"
        },
        {
          "value": "translate-to-top",
          "label": "Translate to top"
        },
        {
          "value": "translate-to-bottom",
          "label": "Translate to bottom"
        },
        {
          "value": "none",
          "label": "None"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "post_show_author",
      "label": "Show author",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "post_show_category",
      "label": "Show category",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "post_show_date",
      "label": "Show published date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "post_show_excerpt",
      "label": "Show excerpt",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "post_show_button",
      "label": "Show read more",
      "default": true
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "reset_spacing",
      "label": "Remove default space between sections",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Blog posts"
    }
  ]
}
{% endschema %}
