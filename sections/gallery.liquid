{%- liquid
  assign st = section.settings
  assign container = st.container
  assign heading = st.heading
  assign description = st.description
  assign text_align = st.text_align
  assign autoplay = st.autoplay
  assign type_layout = st.layout_type
  assign loop = st.loop
  assign background_color = st.background_color
  assign column_gap = st.column_gap
  assign carousel_between = st.column_gap
  assign item_desktop = st.grid_image_desktop
  assign show_arrow = st.show_arrow
  assign show_bullet = st.show_bullet
  assign custom_ratio = st.custom_ratio
  assign aspect_ratio = st.aspect_ratio

  assign responsive_column = ''
  if custom_column == 1
    assign responsive_column = 'col-12'
  elsif custom_column == 2 or custom_column == 4
    assign responsive_column = 'col-sm-6'
  else
    assign responsive_column = 'col-sm-4'
  endif
  assign column_gap_tablet = ''
  if column_gap > 30
    assign column_gap_tablet = ' gap-tablet'
  endif
  assign column_gap_mobile = ''
  if column_gap > 15
    assign column_gap_mobile = ' gap-mobile'
  endif

  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif
  assign spt_tablet = ''
  if st.padding_top > 50
    assign spt_tablet = ' spt-tablet'
  endif
  assign spt_mobile = ''
  if st.padding_top > 30
    assign spt_mobile = ' spt-mobile'
  endif
  assign spb_tablet = ''
  if st.padding_bottom > 50
    assign spb_tablet = ' spb-tablet'
  endif
  assign spb_mobile = ''
  if st.padding_bottom > 30
    assign spb_mobile = ' spb-mobile'
  endif
  assign has_bg = ''
  if background_color  != blank
    assign has_bg = ' has-bg'
  endif
-%}
{%- capture style -%}
{%- if background_color != blank -%}
  --section-bg-color: {{ background_color }};
{%- endif -%}
  --section-padding-top: {{ st.padding_top }}px; --section-padding-bottom: {{ st.padding_bottom }}px; --bls-gutter-x: {{ column_gap }}px;
{%- endcapture -%}
<section
  class="bls__section {{ has_bg }}{{ spt_tablet }}{{ spb_tablet }}{{ spt_mobile }}{{ spt_mobile }}bls__gallery {{ reset_spacing }}"
  data-type="bls_swiper"
  id="{{ section.id }}" data-id="{{ section.id }}"
  style="{{ style | strip | strip_newlines }}"
>
  <div class="{{ container }}">
    {%- if heading != blank or description != blank -%}
      <div class="bls__section-header {{ text_align }}">
        {%- if heading != blank -%}
          <h2 class="bls__section-heading mb-5">{{ heading }}</h2>
        {%- endif -%}
        {%- if description != blank -%}
          <div class="bls__section-des">
            {{ description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
    <div class="bls__gallery-content">
        {%- if type_layout == 'carousel' -%}
          <div
            class="swiper bls__swiper hover__show-nav"
            id="bls__swiper-{{ section.id }}"
            data-section-id = "{{ section.id }}"
            data-autoplay="{{ autoplay }}"
            data-loop="{{ loop }}"
            data-mobile="3"
            data-tablet="4"
            data-desktop="{{ item_desktop }}"
            data-spacing="{{ carousel_between }}"
          >
            <div class="swiper-wrapper" style="--perload-gap: {{ column_gap }}px">
              {%- for block in section.blocks -%}
                <div class="swiper-slide">
                  <div class="bls__gallery-item" {{ block.shopify_attributes }}>
                      {%- if block.settings.link != blank -%}<a href="{{ block.settings.link }}">{%- endif -%}
                        {%- if block.settings.image != blank -%}
                          {%- if st.actions_click == 'photoswipe' -%}
                            <a data-fslightbox="Gallery" data-foo="bar" href="{{ block.settings.image | image_url }}">
                          {%- endif -%}
                            {% render 'responsive-image', image: block.settings.image, aspect_ratio: aspect_ratio, custom_ratio: custom_ratio %}
                          {%- if st.actions_click == 'photoswipe' -%}
                            </a>
                          {%- endif -%}
                        {% else %}
                        {%- render 'responsive-image', cls: 'border', aspect_ratio: aspect_ratio, custom_ratio: custom_ratio -%}
                        {%- endif -%}
                      {%- if block.settings.link != blank -%}</a>{%- endif -%}
                  </div>
                </div>
              {%- endfor -%}
            </div>
            {% render 'swiper-control', show_bullet: show_bullet, show_arrow: show_arrow %}
          </div>
        {%- else -%}
          <div class="bls__gallerygallery-grid">
            <div class="row row-cols-lg-{{ custom_column }}{{ column_gap_tablet }}{{ column_gap_mobile }}" style="--bs-gutter-x: {{ column_gap }}px;">
              {%- for block in section.blocks -%}
                <div class="{{ responsive_column }} col-6">
                  <div class="bls__gallery-item h-full" {{ block.shopify_attributes }}>
                    {%- if block.settings.link != blank -%}<a href="{{ block.settings.link }}">{%- endif -%}
                      {%- if block.settings.image != blank -%}
                            {%- if st.actions_click == 'photoswipe' -%}
                              <a data-fslightbox="gallery" data-foo="bar" href="{{ block.settings.image | image_url }}">
                            {%- endif -%}
                              {% render 'responsive-image', cls: 'h-full', image: block.settings.image, aspect_ratio: aspect_ratio, custom_ratio: custom_ratio %}
                            {%- if st.actions_click == 'photoswipe' -%}
                              </a>
                            {%- endif -%}
                        {% else %}
                          {%- render 'responsive-image', cls: 'border h-full', aspect_ratio: aspect_ratio, custom_ratio: custom_ratio -%}
                        {%- endif -%}
                        {%- if block.settings.link != blank -%}</a>{%- endif -%}
                      </div>
                </div>
              {%- endfor -%}
            </div>
          </div>
        {%- endif -%}
    </div>
  </div>
</section>
