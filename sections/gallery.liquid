        {
          "value": "16/9",
          "label": "16:9"
        },
        {
          "value": "3/4",
          "label": "3:4"
        },
        {
          "value": "4/3",
          "label": "4:3"
        },
        {
          "value": "1/1",
          "label": "1:1"
        },
        {
          "value": "custom",
          "label": "Custom"
        }
      ]
    },
    {
      "type": "text",
      "id": "custom_ratio",
      "label": "Custom ratio",
      "default": "21:9"
    },
    {
      "type": "select",
      "id": "actions_click",
      "label": "Action click",
      "default": "unset",
      "options": [
        {
          "value": "unset",
          "label": "Unset"
        },
        {
          "value": "photoswipe",
          "label": "Photoswipe"
        }
      ]
    },
    {
      "type": "header",
      "content": "Settings for grid"
    },
    {
      "type": "range",
      "id": "custom_column",
      "label": "Columns per row",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "header",
      "content": "Settings for carousel"
    },
    {
      "type": "range",
      "min": 1,
      "max": 8,
      "step": 1,
      "default": 4,
      "label": "Items per row (Desktop)",
      "id": "grid_image_desktop"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Autoplay",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "loop",
      "label": "Loop",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_arrow",
      "label": "Show arrows",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_bullet",
      "label": "Show bullets",
      "default": true
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
