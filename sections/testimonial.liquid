        },
        {
          "type": "text",
          "id": "job",
          "label": "Job",
          "default": "Founder/CEO"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "number",
          "id": "testimonial_width",
          "label": "Image width (px)",
          "default": 100
