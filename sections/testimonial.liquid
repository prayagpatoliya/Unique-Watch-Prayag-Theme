      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [
        {
          "type": "testimonials"
        },
        {
          "type": "testimonials"
        },
        {
          "type": "testimonials"
        }
      ]
    }
  ]
}
{% endschema %}
