{{ 'collections-item.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign st = section.settings
  assign container = st.container
  assign text_align = st.text_alignment
  assign heading = st.heading
  assign description = st.description
  assign bg_color = st.background_color
  assign media_aspect_ratio = st.image_ratio
  assign custom_ratio = st.custom_ratio
  assign column_gap = st.column_gap
  assign se_blocks = section.blocks
  assign se_size = se_blocks.size
  assign column_gap_tablet = ''
  if column_gap > 30
    assign column_gap_tablet = ' gap-tablet'
  endif
  assign column_gap_mobile = ''
  if column_gap > 15
    assign column_gap_mobile = ' gap-mobile'
  endif

  assign spt_tablet = ''
  if st.padding_top > 50
    assign spt_tablet = ' spt-tablet'
  endif
  assign spt_mobile = ''
  if st.padding_top > 30
    assign spt_mobile = ' spt-mobile'
  endif
  assign spb_tablet = ''
  if st.padding_bottom > 50
    assign spb_tablet = ' spb-tablet'
  endif
  assign spb_mobile = ''
  if st.padding_bottom > 30
    assign spb_mobile = ' spb-mobile'
  endif

  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif

  assign has_bg = ''
  if bg_color != blank
    assign has_bg = ' has-bg'
  endif
-%}
{%- capture style -%}
  {%- if bg_color != blank -%}
    --section-bg-color: {{ bg_color }};
  {%- endif -%}
  --section-padding-top: {{ st.padding_top }}px; --section-padding-bottom: {{ st.padding_bottom }}px; --bls-gutter-x:
  {{ column_gap }}px;
{%- endcapture -%}
<section
  class="bls__section {{ has_bg}}{{ spt_tablet }}{{ spb_tablet }}{{ spt_mobile }}{{ spt_mobile }} bls__collection-packery {{ reset_spacing }}"
  style="{{ style | strip | strip_newlines }}"
>
  <div class="{{ container }} section-full">
    {%- if heading != blank or description != blank -%}
      <div class="bls__section-header {{ text_align }}">
        {%- if heading != blank -%}
          <h2 class="bls__section-heading mb-5">{{ heading }}</h2>
        {%- endif -%}
        {%- if description != blank -%}
          <div class="bls__section-des">
            {{ description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
    <div class="bls__collection-packery-content design-1">
      <div
        class="row d-grid {{ column_gap_tablet }}{{ column_gap_mobile }} grid-{{ se_size }}"
        style="--bs-gutter-x: {{ column_gap }}px;"
      >
        {%- for block in se_blocks -%}
          {%- liquid
            assign collection = collections[block.settings.collection]
            assign columns_item = 'bls__collection-column'
          -%}
          <div class="{{ columns_item }}">
            {% render 'list-collection-item',
              collection_item: collection,
              media_aspect_ratio: media_aspect_ratio,
              custom_ratio: custom_ratio,
              limit_content_des: 25,
              type: 'custom',
              block: block,
              columns: 3,
              st: st
            %}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

