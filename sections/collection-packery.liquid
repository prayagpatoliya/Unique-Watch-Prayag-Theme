    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "reset_spacing",
      "label": "Remove default space between sections",
      "default": false
    }
  ],
  "max_blocks": 5,
  "blocks": [
    {
      "type": "collection_item",
      "name": "Collection item",
      "settings": [
        {
          "type": "text",
          "id": "title_collection",
          "label": "Collection heading"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "Select collection"
