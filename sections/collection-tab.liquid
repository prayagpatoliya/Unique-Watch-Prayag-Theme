{{ 'product.css' | asset_url | stylesheet_tag }}
{%- liquid
  assign th_st = settings
  assign product_style = th_st.product_style
  assign st = section.settings
  assign container = st.container
  assign bg_color = st.bg_color
  assign text_align = st.text_alignment
  assign heading = st.heading
  assign description = st.description
  assign custom_width = st.custom_width

  assign more_row = ''
  if st.number_of_rows > 1
    assign more_row = 'more-row'
  endif
  assign spt_tablet = ''
  if st.padding_top > 50
    assign spt_tablet = ' spt-tablet'
  endif
  assign spt_mobile = ''
  if st.padding_top > 30
    assign spt_mobile = ' spt-mobile'
  endif
  assign spb_tablet = ''
  if st.padding_bottom > 50
    assign spb_tablet = ' spb-tablet'
  endif
  assign spb_mobile = ''
  if st.padding_bottom > 30
    assign spb_mobile = ' spb-mobile'
  endif
  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif
  assign blocks = section.blocks
  assign tab_type = st.tab_type
  assign tab_design = st.tab_design

  assign grid_class = ''
  if tab_type == 'grid'
    assign grid_class = 'bls__grid {{ product_style }}'
  endif
  assign has_bg = ''
  if bg_color != blank
    assign has_bg = ' has-bg'
  endif
-%}

{%- capture style -%}
  {%- if bg_color != blank -%}
    --section-bg-color: {{ bg_color }};
  {%- endif -%}
  --section-padding-top: {{ st.padding_top }}px; --section-padding-bottom: {{ st.padding_bottom }}px;
{%- endcapture -%}
<section
  class="bls__section {{ has_bg }} {{ spt_tablet }}{{ spb_tablet }}{{ spt_mobile }}{{ spt_mobile }} bls__product bls__tab{{ reset_spacing }} {{ more_row }}"
  style="{{ style | strip | strip_newlines }}"
  id="{{ section.id }}"
  data-id="{{ section.id }}"
  data-type="product_grid"
>
  <div class=" {{ container }} ">
    {%- if heading != blank or description != blank -%}
      <div class="bls__section-header {{ text_align }}">
        {%- if heading != blank -%}
          <h2 class="bls__section-heading mb-5">{{ heading }}</h2>
        {%- endif -%}
        {%- if description != blank -%}
          <div class="bls__section-des">
            {{ description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
    <div class="bls__collection-tab" data-id=" {{ section.id }} ">
      {%- if tab_design == 'horizontal' -%}
        <div class="bls__section-header text-center whitespace-nowrap overflow-y-hidden">
          {%- for block in blocks -%}
            {%- liquid
              assign tab_name = block.settings.title
              assign current_collection = block.settings.collection
              assign active = ''
              if forloop.first == true
                assign active = ' active'
              endif
              if block.settings.title == blank
                assign tab_name = 'Tab ' | append: forloop.index
                if collection != blank
                  assign tab_name = current_collection.title
                endif
              endif
            -%}
            <h6
              class="bls__section-heading bls__collection-tab-item{{ active }} px-25 d-inline-flex"
              data-id="collection-{{ block.id }}"
            >
              <span class="relative">{{ tab_name }}</span>
            </h6>
          {%- endfor -%}
        </div>
      {%- else -%}
        <div class="bls__section-header flex justify-content-center align-items-center flex-nowrap">
          <h2 class="bls__section-heading grey-color mb-0 mr-20">{{ 'products.product.select_tab' | t }}</h2>
          <div class="custom-select flex flex-nowrap">
            <select class="bls__section-heading bls__select select-data">
              {%- for block in blocks -%}
                {%- liquid
                  assign tab_name = block.settings.title
                  assign current_collection = block.settings.collection
                  assign active = ''
                  if forloop.first == true
                    assign active = ' active'
                  endif
                  if block.settings.title == blank
                    assign tab_name = 'Tab ' | append: forloop.index
                    if collection != blank
                      assign tab_name = current_collection.title
                    endif
                  endif
                -%}
                <option value="collection-{{ block.id }}">{{ tab_name }}</option>
              {%- endfor -%}
            </select>
          </div>
        </div>
      {%- endif -%}
      <div class="bls__collection-tab-content">
        {%- for block in blocks -%}
          {%- liquid
            assign tab_name = block.settings.title
            assign current_collection = block.settings.collection
            assign active = ''
            if forloop.first == true
              assign active = ' active'
            endif
          -%}
          <div
            class="bls__cls-tab{{ active }} {{ grid_class }} bls__grid {{ product_style }}"
            id="collection-{{ block.id }}"
            data-id="{{ block.id }}"
          >
            {%- if tab_type == 'grid' -%}
              {%- render 'product-grid-layout' | st: st | bl: current_collection | block: block -%}
            {%- else -%}
              {%- render 'product-carousel-layout' | st: st | bl: current_collection -%}
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
</section>

